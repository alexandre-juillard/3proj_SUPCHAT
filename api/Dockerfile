# Build stage
FROM node:20-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm ci --only=production

# Production stage
FROM node:20-alpine
WORKDIR /app
COPY --from=builder /app/node_modules ./node_modules
COPY . .

# Utilisateur non-root pour la sécurité
USER node

# Exposition du port
EXPOSE 3000

CMD ["npm", "start"]